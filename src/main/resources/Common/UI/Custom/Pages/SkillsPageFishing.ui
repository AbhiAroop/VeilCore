$C = "../Common.ui";

@BackgroundImage = PatchStyle(TexturePath: "../skills_fishing.png");

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #8b3a3a, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #9b4a4a, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #7b2a2a, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@NavButtonStyle = TextButtonStyle(
  Default: (Background: #2c3e50, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #34495e, LabelStyle: (FontSize: 12, TextColor: #00d4ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1a252f, LabelStyle: (FontSize: 12, TextColor: #00d4ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@ActiveNavButtonStyle = TextButtonStyle(
  Default: (Background: #00d4ff(0.3), LabelStyle: (FontSize: 12, TextColor: #00d4ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #00d4ff(0.4), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #00d4ff(0.2), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  LayoutMode: Left;
  Anchor: (Width: 800, Height: 600);
  Background: @BackgroundImage;

  Group {
    LayoutMode: Top;
    Anchor: (Width: 150);
    Background: #0d1117(0.9);
    Padding: (Full: 15);

    Label {
      Text: "SKILLS";
      Anchor: (Height: 30);
      Style: (FontSize: 11, TextColor: #e8e8e8, RenderBold: true, HorizontalAlignment: Center);
    }

    Group { Anchor: (Height: 10); }

    TextButton #MiningButton {
      Text: "Mining";
      Anchor: (Height: 36);
      Style: @NavButtonStyle;
    }

    Group { Anchor: (Height: 8); }

    TextButton #CombatButton {
      Text: "Combat";
      Anchor: (Height: 36);
      Style: @NavButtonStyle;
    }

    Group { Anchor: (Height: 8); }

    TextButton #FarmingButton {
      Text: "Farming";
      Anchor: (Height: 36);
      Style: @NavButtonStyle;
    }

    Group { Anchor: (Height: 8); }

    TextButton #WoodcuttingButton {
      Text: "Woodcutting";
      Anchor: (Height: 36);
      Style: @NavButtonStyle;
    }

    Group { Anchor: (Height: 8); }

    TextButton #FishingButton {
      Text: "Fishing";
      Anchor: (Height: 36);
      Style: @ActiveNavButtonStyle;
    }

    Group { FlexWeight: 1; }

    TextButton #CloseButton {
      Text: "CLOSE";
      Anchor: (Height: 40);
      Style: @CloseButtonStyle;
    }
  }

  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Left: 20, Right: 20, Top: 20, Bottom: 20);

    Label #ProfileName {
      Text: "Profile Name";
      Anchor: (Height: 40);
      Style: (
        FontSize: 26,
        TextColor: #ffffff,
        HorizontalAlignment: Center,
        RenderBold: true
      );
    }

    Group { 
      Anchor: (Height: 3);
      Background: #ffffff(0.8);
    }

    Group { Anchor: (Height: 15); }

    Group {
      LayoutMode: Top;
      Background: #1e2a3a(0.85);
      Padding: (Full: 20);
      
      Label {
        Text: "FISHING SKILL";
        Anchor: (Height: 32);
        Style: (FontSize: 18, TextColor: #55FFFF, RenderBold: true, HorizontalAlignment: Center);
      }

      Group { Anchor: (Height: 15); }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 28);
        
        Label {
          Text: "Current Level:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #CurrentLevel {
          Text: "1";
          Anchor: (Width: 100);
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }

        Label {
          Text: "Next Level:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #NextLevel {
          Text: "2";
          FlexWeight: 1;
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }
      }

      Group { Anchor: (Height: 12); }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 28);
        
        Label {
          Text: "Current XP:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #CurrentXP {
          Text: "0";
          Anchor: (Width: 100);
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }

        Label {
          Text: "XP to Next:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #XPToNext {
          Text: "100";
          FlexWeight: 1;
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }
      }

      Group { Anchor: (Height: 12); }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 28);
        
        Label {
          Text: "Progress:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #Progress {
          Text: "0%";
          Anchor: (Width: 100);
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }

        Label {
          Text: "Total XP:";
          Anchor: (Width: 180);
          Style: (FontSize: 14, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #TotalXP {
          Text: "0";
          FlexWeight: 1;
          Style: (FontSize: 14, TextColor: #ffffff, RenderBold: true);
        }
      }

      Group { Anchor: (Height: 20); }

      Group {
        LayoutMode: Top;
        Background: #161b22(0.7);
        Padding: (Full: 15);

        Label {
          Text: "Available Tokens";
          Anchor: (Height: 24);
          Style: (FontSize: 14, TextColor: #00d4ff, RenderBold: true, HorizontalAlignment: Center);
        }

        Group { Anchor: (Height: 10); }

        Group {
          LayoutMode: Left;
          Anchor: (Height: 26);

          Label {
            Text: "Basic:";
            Anchor: (Width: 120);
            Style: (FontSize: 13, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
          }

          Label #BasicTokens {
            Text: "0";
            Anchor: (Width: 80);
            Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true);
          }

          Label {
            Text: "Advanced:";
            Anchor: (Width: 120);
            Style: (FontSize: 13, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
          }

          Label #AdvancedTokens {
            Text: "0";
            Anchor: (Width: 80);
            Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true);
          }

          Label {
            Text: "Master:";
            Anchor: (Width: 120);
            Style: (FontSize: 13, TextColor: #e8e8e8, VerticalAlignment: Center, RenderBold: true);
          }

          Label #MasterTokens {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true);
          }
        }
      }
    }
  }
}
