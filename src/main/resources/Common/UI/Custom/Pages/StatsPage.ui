$C = "../Common.ui";

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #8b3a3a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #9b4a4a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #7b2a2a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 700, Height: 550);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 25);

  Label #ProfileName {
    Text: "Profile Name";
    Anchor: (Height: 35);
    Style: (
      FontSize: 22,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group { Anchor: (Height: 1); Background: #2b3542; }

  Group { Anchor: (Height: 15); }

  Label {
    Text: "Combat Stats";
    Anchor: (Height: 28);
    Style: (FontSize: 16, TextColor: #ff6b6b, RenderBold: true);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Health:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Health {
      Text: "100";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Stamina:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Stamina {
      Text: "100";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 4); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Mana:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Mana {
      Text: "100/100";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Armor:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Armor {
      Text: "0";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 4); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Speed:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Speed {
      Text: "0.10";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Crit Dmg:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #CritDamage {
      Text: "1.5x";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 4); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Crit Chance:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #CritChance {
