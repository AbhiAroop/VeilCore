    }
    
    Label #LootingFortune {
      Text: "1.00";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 15); }

  Label {
    Text: "Resource Stats";
    Anchor: (Height: 28);
    Style: (FontSize: 16, TextColor: #4a9eff, RenderBold: true);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Mana Regen:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #ManaRegen {
      Text: "1";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Luck:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #Luck {
      Text: "0";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 15); }

  Label {
    Text: "Gameplay Stats";
    Anchor: (Height: 28);
    Style: (FontSize: 16, TextColor: #ff9800, RenderBold: true);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Mining:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #MiningFortune {
      Text: "1.00";
