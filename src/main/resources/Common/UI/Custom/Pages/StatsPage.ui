      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Atk Speed:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #AttackSpeed {
      Text: "0.50";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
  }

  Group { Anchor: (Height: 15); }

  Label {
    Text: "Fortune Stats";
    Anchor: (Height: 28);
    Style: (FontSize: 16, TextColor: #ffd700, RenderBold: true);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 24);
    
    Label {
      Text: "Mining:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
    Label #MiningFortune {
      Text: "1.00";
      Anchor: (Width: 80);
      Style: (FontSize: 13, TextColor: #ffffff);
    }
    
    Label {
      Text: "Farming:";
      Anchor: (Width: 120);
      Style: (FontSize: 13, TextColor: #96a9be);
    }
    
