$C = "../Common.ui";

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: #8b3a3a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #9b4a4a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #7b2a2a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 750, Height: 600);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Left: 20, Right: 20, Top: 20, Bottom: 20);

  Label #ProfileName {
    Text: "Profile Name";
    Anchor: (Height: 40);
    Style: (
      FontSize: 26,
      TextColor: #00d4ff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group { 
    Anchor: (Height: 3);
    Background: #00d4ff(0.6);
  }

  Group { Anchor: (Height: 15); }

  Group {
    LayoutMode: Top;
    Background: #1e2a3a(0.5);
    Padding: (Full: 15);
    
    Label {
      Text: "[ ADDITIONAL STATS ]";
      Anchor: (Height: 28);
      Style: (FontSize: 16, TextColor: #9b59b6, RenderBold: true);
    }

    Group { Anchor: (Height: 10); }

    Label {
      Text: "More stats will be displayed here...";
      Anchor: (Height: 24);
      Style: (FontSize: 14, TextColor: #96a9be, HorizontalAlignment: Center);
    }

    Group { Anchor: (Height: 10); }

    Label {
      Text: "This is Page 2 of Stats";
      Anchor: (Height: 24);
      Style: (FontSize: 14, TextColor: #96a9be, HorizontalAlignment: Center);
    }
  }

  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 44);
    Padding: (Left: 10, Right: 10);

    TextButton #PrevButton {
      Text: "< BACK";
      Anchor: (Width: 120, Height: 40);
      Style: @CloseButtonStyle;
    }

    Group { FlexWeight: 1; }

    TextButton #CloseButton {
      Text: "CLOSE";
      Anchor: (Width: 120, Height: 40);
      Style: @CloseButtonStyle;
    }
  }
}
