$C = "../Common.ui";

@BackgroundImage = PatchStyle(TexturePath: "../stats_background.png");
@ButtonBackgroundImage = PatchStyle(TexturePath: "../stats_button.png");
@CloseButtonBackgroundImage = PatchStyle(TexturePath: "../close_button.png");

@ActiveNavButtonStyle = TextButtonStyle(
  Default: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #00d4ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@NavButtonStyle = TextButtonStyle(
  Default: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: @ButtonBackgroundImage, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@CloseButtonStyle = TextButtonStyle(
  Default: (Background: @CloseButtonBackgroundImage, LabelStyle: (FontSize: 13, TextColor: #ff0000, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: @CloseButtonBackgroundImage, LabelStyle: (FontSize: 13, TextColor: #ff0000, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: @CloseButtonBackgroundImage, LabelStyle: (FontSize: 13, TextColor: #ff0000, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  LayoutMode: Left;
  Anchor: (Width: 800, Height: 600);
  Background: @BackgroundImage;

  // Left Navigation Panel
  Group {
    LayoutMode: Top;
    Anchor: (Width: 240);
    Padding: (Full: 15);

    Group { Anchor: (Height: 120); }

    Group {
      LayoutMode: Top;
      Padding: (Left: 15);

      TextButton #CombatButton {
        Text: "Combat";
        Anchor: (Height: 30);
        Style: @NavButtonStyle;
      }

      Group { Anchor: (Height: 8); }

      TextButton #MiningButton {
        Text: "Mining";
        Anchor: (Height: 30);
        Style: @NavButtonStyle;
      }

      Group { Anchor: (Height: 8); }

      TextButton #FarmingButton {
        Text: "Farming";
        Anchor: (Height: 30);
        Style: @ActiveNavButtonStyle;
      }

      Group { Anchor: (Height: 8); }

      TextButton #FishingButton {
        Text: "Fishing";
        Anchor: (Height: 30);
        Style: @NavButtonStyle;
      }

      Group { Anchor: (Height: 8); }

      TextButton #GeneralButton {
        Text: "General";
        Anchor: (Height: 30);
        Style: @NavButtonStyle;
      }
    }
  }

  // Main Content Area
  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Left: 50, Right: 50, Top: 40, Bottom: 80);

    Label #ProfileName {
      Text: "FARMING STATISTICS";
      Anchor: (Height: 30);
      Style: (
        FontSize: 26,
        TextColor: #ffffff,
        HorizontalAlignment: Center,
        RenderBold: true
      );
    }

    Group { Anchor: (Height: 50); }

    Group {
      LayoutMode: Top;
      Padding: (Left: 30, Right: 30, Top: 15, Bottom: 15);
      
      Group { Anchor: (Height: 8); }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 28);
        
        Label {
          Text: "Farming Fortune:";
          Anchor: (Width: 120);
          Style: (FontSize: 14, TextColor: #2c3e50, VerticalAlignment: Center, RenderBold: true);
        }
        
        Label #FarmingFortune {
          Text: "1.00";
          Anchor: (Width: 70);
          Style: (FontSize: 14, TextColor: #1a252f, RenderBold: true);
        }
      }
    }

    Group { FlexWeight: 1; }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 50);
      
      Group { Anchor: (Width: 50); }
      
      TextButton #CloseButton {
        Text: "CLOSE";
        Anchor: (Width: 150, Height: 35);
        Style: @CloseButtonStyle;
      }
      
      Group { FlexWeight: 1; }
    }
  }
}
